<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aisha.intrepidget.RecyclerPicturesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gallery"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="@dimen/dimen60sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="100dp"
        android:paddingLeft="200dp">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dimen35dp"
        android:layout_height="@dimen/dimen250dp"
        android:layout_margin="@dimen/dimen20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sanfran" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dimen35dp"
        android:layout_height="@dimen/dimen250dp"
        android:layout_margin="@dimen/dimen20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/londonbridge" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dimen35dp"
        android:layout_height="@dimen/dimen250dp"
        android:layout_margin="@dimen/dimen20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lagos" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dimen35dp"
        android:layout_height="@dimen/dimen250dp"
        android:layout_margin="@dimen/dimen20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/luxem" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dimen35dp"
        android:layout_height="@dimen/dimen250dp"
        android:layout_margin="@dimen/dimen20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/netherland" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dimen35dp"
        android:layout_height="@dimen/dimen250dp"
        android:layout_margin="@dimen/dimen20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/japan" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dimen35dp"
        android:layout_height="@dimen/dimen250dp"
        android:layout_margin="@dimen/dimen20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/qatar" />
    </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>


</LinearLayout>
